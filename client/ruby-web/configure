def exc str
	puts str
	system str
end

if ARGV[0]=="clean"
	exc "rm io2io/Makefile"
	exc "rm magicmime/Makefile"
	exc "rm Makefile"
else
	exc "ruby -Cio2io configure"
	exc "ruby -Cmagicmime configure"
	puts "Creating Makefile"
end
